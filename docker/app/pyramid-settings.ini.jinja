[app:main]
use = egg:iris.service

pyramid.reload_templates = true
pyramid.debug_authorization = false
pyramid.debug_notfound = false
pyramid.debug_routematch = false
pyramid.default_locale_name = en

pyramid.includes =
    pyramid_jinja2

pyramid_swagger.exclude_paths = ^(/docs|/admin|/swaggerui|/v1/views)
pyramid_swagger.enable_swagger_spec_validation = True
pyramid_swagger.enable_request_validation = True
pyramid_swagger.enable_response_validation = False
pyramid_swagger.enable_path_validation = True
pyramid_swagger.enable_api_doc_views = True
pyramid_swagger.include_read_only_properties = False
pyramid_swagger.pass_property_on_missing_spec = False
pyramid_swagger.expand_missing_properties = False
pyramid_swagger.dereference_served_schema = True

api.app_url = https://{{ context['access']['url'] }}

auth.secret = {{ context['auth_secret'] }}
auth.cookie_name = iris-tkt

{% for key, value in context['sso']['apikeys'].items() %}
sso.apikey.{{ key }} = {{ value }}
{% endfor %}
{% for key, value in context['iris']['apikeys'].items() %}
iris.apikey.{{ key }} = {{ value }}
{% endfor %}

iris.city.treshold = 100
iris.approval.days = {{ context['iris']['approval_days'] }}
iris.letter.wait.days = {{ context['iris']['letter_wait_days'] }}

frontend.domain = {{ context['frontend']['domain'] }}
frontend.petition.confirmpath = {{ context['frontend']['petition-mail-confirmpath'] }}
frontend.supporter.confirmpath = {{ context['frontend']['supporter-mail-confirmpath'] }}

# URLs used for petitions in mails
frontend.petition.urls.url = {{ context['frontend']['domain'] }}/petitons/{id}
frontend.petition.urls.edit = {{ context['frontend']['domain'] }}/petitons/{id}/edit
frontend.petition.urls.city = {{ context['frontend']['domain'] }}/petitions/{city_url_id}
frontend.petition.urls.letter = https://{{ context['access']['url'] }}/#/petition/{id}/letter/cover
# frontend.petition.urls.appendix = {{ context['frontend']['domain'] }}/petitons/{id}/appendix

statemachine.petitions.cron = */5 * * * *

static.docs = iris.service:docs
              docs

# also add this URL to 'pyramid_swagger.exclude_paths'
swagger_ui.url = swaggerui

cors.Allow-Origin = *
cors.Allow-Methods = POST,GET,DELETE,PUT,OPTIONS
cors.Allow-Headers = Origin, Content-Type, Accept, Authorization
cors.Allow-Credentials = true
cors.Max-Age = 86400

{% for key, value in context['aws'].items() %}
aws.{{ key }} = {{ value }}
{% endfor %}

imageproxy.url = {{ context['imageproxy']['url'] }}

og.https_proxy_url = https://{{ context['access']['url'] }}/https_proxy

mandrill.key = {{ context['mandrill']['key'] }}

es.hosts = {% for node in config['containers']['iris-crate']['hosts'] %}{{node}}:{{config['containers']['iris-crate']['ports'][0][0]}} {%endfor%}

###
# wsgi server configuration
###

[server:main]
use = egg:iris.service#server
host = 0.0.0.0
port = %(http_port)s

###
# logging configuration
###

[loggers]
keys = root

[handlers]
keys = console

[formatters]
keys = generic

[logger_root]
level = INFO
handlers = console

[handler_console]
class = StreamHandler
args = (sys.stderr,)
level = NOTSET
formatter = generic

[formatter_generic]
format = %(asctime)s %(levelname)-5.5s [%(name)s] %(message)s

